<?xml version="1.0" encoding="UTF-8"?>

<toolbox>
	<access group="author" access="770"/>
	<name>
		<text lang="de">Text-Editor</text>
		<text lang="en">Text-editor</text>
	</name>

	<icon group="publisher" access="770">
		<name>
			<text lang="de">Einfügen</text>
			<text lang="en">Insert</text>
		</name>
		<href>javascript():article_insert</href>
		<title>
			<text lang="de">Neuen Absatz einfügen</text>
			<text lang="en">Insert new paragraph</text>
		</title>
		<image>toolbox_insert_text.png</image>
		<disabled>toolbox_insert_text_disabled.png</disabled>
	</icon>

	<icon group="publisher" access="770">
		<name>
			<text lang="de">Löschen</text>
			<text lang="en">Delete</text>
		</name>
		<href>javascript():article_delete</href>
		<title>
			<text lang="de">Absatz löschen</text>
			<text lang="en">Delete paragraph</text>
		</title>
		<image>toolbox_delete_text.png</image>
		<disabled>toolbox_delete_text_disabled.png</disabled>
	</icon>

	<icon group="publisher" access="770">
		<name>
			<text lang="de">Bewegen</text>
			<text lang="en">Move</text>
		</name>
		<href>javascript():article_move</href>
		<title>
			<text lang="de">Absatz verschieben</text>
			<text lang="en">Move paragraph</text>
		</title>
		<image>toolbox_move_text.png</image>
		<disabled>toolbox_move_text_disabled.png</disabled>
	</icon>

<!--	<icon>
		<name>
			<text lang="de">Kopieren</text>
			<text lang="en">Copy</text>
		</name>
		<href>javascript():template_copy</href>
		<title>
			<text lang="de">Rahmen kopieren</text>
			<text lang="en">Copy frame</text>
		</title>
		<image>toolbox_copy.png</image>
		<disabled>toolbox_copy_disabled.png</disabled>
	</icon>-->

	<icon group="publisher" access="770">
		<image>toolbox_line.png</image>
	</icon>

	<icon group="admin" access="740">
		<name>
			<text lang="de">Index</text>
			<text lang="en">Index</text>
		</name>
		<href>current():toolbox=article_edit;action=create_index</href>
		<title>
			<text lang="de">Suchindex neu erstellen</text>
			<text lang="en">Re-index text</text>
		</title>
		<image>toolbox_reindex.png</image>
		<disabled>toolbox_reindex_disabled.png</disabled>
	</icon>

	<icon group="admin" access="740">
		<name>
			<text lang="de">Index löschen</text>
			<text lang="en">Delete index</text>
		</name>
		<href>current():toolbox=article_edit;action=delete_index</href>
		<title>
			<text lang="de">Suchindex löschen</text>
			<text lang="en">Delete text index</text>
		</title>
		<image>toolbox_delete_index.png</image>
		<disabled>toolbox_delete_index_disabled.png</disabled>
	</icon>

	<icon group="publisher" access="770">
		<image>toolbox_line.png</image>
	</icon>

	<icon>
		<name>
			<text lang="de">OK</text>
			<text lang="en">OK</text>
		</name>
		<href>current():toolbox=article_edit</href>
		<val>action=save</val>
		<title>
			<text lang="de">Änderungen speichern</text>
			<text lang="en">Save changes</text>
		</title>
		<image>toolbox_ok.png</image>
		<disabled>toolbox_ok_disabled.png</disabled>
	</icon>

	<icon>
		<name>
			<text lang="de">Abbrechen</text>
			<text lang="en">Cancel</text>
		</name>
		<href>javascript():template_cancel</href>
		<title>
			<text lang="de">Änderungen verwerfen</text>
			<text lang="en">Abort changes</text>
		</title>
		<image>toolbox_cancel.png</image>
		<disabled>toolbox_cancel_disabled.png</disabled>
	</icon>

	<icon>
		<image>toolbox_line.png</image>
	</icon>

	<icon>
		<name>
			<text lang="de">Verlassen</text>
			<text lang="en">Exit</text>
		</name>
		<href>current()</href>
		<title>
			<text lang="de">Editor verlassen</text>
			<text lang="en">Exit editor</text>
		</title>
		<image>toolbox_exit.png</image>
		<disabled>toolbox_exit_disabled.png</disabled>
	</icon>

</toolbox>

