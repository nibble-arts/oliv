<?xml version="1.0" encoding="UTF-8"?>

<toolbox>
	<access group="admin" access="770"/>

	<name>
		<text lang="de">Template-Editor</text>
		<text lang="en">Template-edit</text>
	</name>

	<icon>
		<name>
			<text lang="de">Einfügen</text>
			<text lang="en">Insert</text>
		</name>
		<href>javascript():template_insert</href>
		<title>
			<text lang="de">Neuen Rahmen einfügen</text>
			<text lang="en">Insert new frame</text>
		</title>
		<image>toolbox_insert.png</image>
		<disabled>toolbox_insert_disabled.png</disabled>
	</icon>

	<icon>
		<name>
			<text lang="de">Bearbeiten</text>
			<text lang="en">Edit</text>
		</name>
		<href>javascript():template_edit</href>
		<title>
			<text lang="de">Rahmen bearbeiten</text>
			<text lang="en">Edit frame</text>
		</title>
		<image>toolbox_edit.png</image>
		<disabled>toolbox_edit_disabled.png</disabled>
	</icon>

	<icon>
		<name>
			<text lang="de">Bewegen</text>
			<text lang="en">Move</text>
		</name>
		<href>javascript():template_move</href>
		<title>
			<text lang="de">Rahmen bewegen</text>
			<text lang="en">Move frame</text>
		</title>
		<image>toolbox_move.png</image>
		<disabled>toolbox_move_disabled.png</disabled>
	</icon>

	<icon>
		<name>
			<text lang="de">Löschen</text>
			<text lang="en">Delete</text>
		</name>
		<href>javascript():template_delete</href>
		<title>
			<text lang="de">Rahmen löschen</text>
			<text lang="en">Delete frame</text>
		</title>
		<image>toolbox_delete.png</image>
		<disabled>toolbox_delete_disabled.png</disabled>
	</icon>

	<icon>
		<name>
			<text lang="de">Kopieren</text>
			<text lang="en">Copy</text>
		</name>
		<href>javascript():template_copy</href>
		<title>
			<text lang="de">Rahmen kopieren</text>
			<text lang="en">Copy frame</text>
		</title>
		<image>toolbox_copy.png</image>
		<disabled>toolbox_copy_disabled.png</disabled>
	</icon>

	<icon>
		<image>toolbox_line.png</image>
	</icon>

	<icon>
		<name>
			<text lang="de">OK</text>
			<text lang="en">OK</text>
		</name>
		<href>current()</href>
		<val>action=save</val>
		<title>
			<text lang="de">Änderungen speichern</text>
			<text lang="en">Save changes</text>
		</title>
		<image>toolbox_ok.png</image>
		<disabled>toolbox_ok_disabled.png</disabled>
	</icon>

	<icon>
		<name>
			<text lang="de">Abbrechen</text>
			<text lang="en">Cancel</text>
		</name>
		<href>javascript():template_cancel</href>
		<title>
			<text lang="de">Änderungen verwerfen</text>
			<text lang="en">Abort changes</text>
		</title>
		<image>toolbox_cancel.png</image>
		<disabled>toolbox_cancel_disabled.png</disabled>
	</icon>

	<icon>
		<image>toolbox_line.png</image>
	</icon>

	<icon>
		<name>
			<text lang="de">Verlassen</text>
			<text lang="en">Exit</text>
		</name>
		<href>current()</href>
		<title>
			<text lang="de">Editor verlassen</text>
			<text lang="en">Exit editor</text>
		</title>
		<image>toolbox_exit.png</image>
		<disabled>toolbox_exit_disabled.png</disabled>
	</icon>

</toolbox>

