defined('OLIVCORE') or die ("render.php - OLIVCore not present");
defined('OLIVERROR') or die ("render.php - OLIVError not present");

class templatePlugin
{
  var $editor;
  
//------------------------------------------------------------------------------
// render functions
  static public function __callStatic($tag,$options)
  {
    $value = $options[0];
    $param = $options[1];

    return (templatePlugin::tagString($tag,$value,$param));
  }






//------------------------------------------------------------------------------
// create tag string
  static private function tagString($tag,$value,$param)
  {
    $paramString = "";
    foreach ($param->attributes() as $entry)
    {
      $key = (string)$entry->getName();
      $value = (string)$entry;
      $paramString = "$key='$value' ";
    }
echoall($tag);
    $o = "<$tag name='$value' $paramString>";
      $o .= "*$tag";
    $o .= "</$tag>";

    return ($o);
  }
}

?>
